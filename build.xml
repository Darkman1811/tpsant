<?xml version="1.0" ?>
<project name="Hello Word Project" default="info">
	
	
    
	
	<target  name="info">		
		<echo> Welcome to apache Ant : Testing ants types</echo>

        <property file="build.properties" />

        <patternset id="perspat">

        	<include name="pers*.java"/>
            <include name="**/*.txt"/>
            <include name="lib/*.zip"/>
        </patternset>

        <patternset id="etudpat">
        	<include name="*etud*.java"/>
        </patternset>
        

        <fileset dir="./src" id="sourcepers">
       
        	     <patternset refid="perspat"/>    
        	     <and>
        	     <size value="1" units="M" when="more"/>
        	     <modified >
        	     	 <param name="cache.cachefile" value="custom.cach"/>
        	     	 <param name="algorithm.algorithm" value="SHA"/>
        	     </modified>
                </and>
        </fileset>

        <copy todir="${dev.dest1}">
		   <fileset refid="sourcepers"/>
	    </copy>
	    
	    <echo> copy ready </echo>
	</target>

	
		
</project>