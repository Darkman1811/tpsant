<?xml version="1.0" ?>
<project name="Hello Word Project" default="info">
	
	
    
	
	<target  name="info">		
		<echo> Welcome to apache Ant Packaging</echo>

        <mkdir dir="./build"/>
        <mkdir dir="./dist"/>

		<javac srcdir="./src" destdir="./build"  depend="true" includes="Personne.java" includeantruntime="true" listfiles="false" verbose="false"/>
		<java classpath="./build" classname="Personne"   />
		<zip basedir="./build" destfile="./dist/proj.zip" includes="*.class" />

	</target>

	
		
</project>